/**index.wxss**/
.container{
  position: relative;
  width: 100%;
  height:100vh;
  overflow: hidden;
}
.container_bg{
  width: 100%;
  height: 100%;
}
.control_btns{
  position: fixed;
  left: 0;
  width: 100%;
  padding: 0 16rpx;
  bottom: 80rpx;
  display: flex;
  display: -webkit-flex;
  box-sizing: border-box;
}
.control_btns .btn{
  flex:1;
  -webkit-flex:1;
  margin: 16rpx;
  text-align: center;
  height: 116rpx;
  line-height: 116rpx;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 116rpx;
  border: 2px solid #3165ec;
}
