/* pages/myReservation/index.wxss */
page{
  background: #F2F4FC;
}
.reservation{
  border-top: 1px solid #e8e8e8;
}
.reservation_wrap{
  padding: 0 32rpx;
  background: #fff;
}
.reservation_status{
  padding: 50rpx 0;
  text-align: center;
}
.reservation_status .status_icon{
  width: 186rpx;
}
.reservation_status .status_txt{
  margin-top: 30rpx;
  font-size: 40rpx;
  color: #333;
}
.reservation_header{
  width: 100%;
  height: 128rpx;
  line-height: 128rpx;
  font-size: 34rpx;
  font-weight: 700;
  border-bottom: 1px solid #e8e8e8;
}
.reservation_header .title{
  margin-right: 30rpx;
  color: #262630;
}
.reservation_header .status_success{
  color: #50E3C2;
}
.reservation_header .status_cancel{
  color: #84848C;
}
.reservation_box .item{
  display: flex;
  display: -webkit-flex;
  padding: 30rpx 0;
  font-size: 28rpx;
  font-weight: 700;
}
.reservation .label{
  width: 180rpx;
  color: #84848C;
}
.reservation .content{
  flex: 1;
  -webkit-flex:1;
  color: #262630;
}
.tip_content{
  padding: 30rpx;
  font-size: 28rpx;
  color: #84848C;
}
.tip_content .tip{
  margin-bottom: 8rpx;
}
.reservation .common_btn{
  position: fixed;
  left: 16rpx;
  right: 16rpx;
  bottom: 80rpx;
}
.reservation .static_btn{
  margin: 40rpx 30rpx;
  position: static;
}